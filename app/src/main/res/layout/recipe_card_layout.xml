<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@id/recipe_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="2dp"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@id/recipe_card_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/card_image_description"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@id/recipe_card_click_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                android:background="@color/card_lower_background">

                <TextView
                    android:id="@id/recipe_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:textColor="@color/card_font_color"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <TextView
                    android:id="@id/recipe_card_author"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/card_font_color"
                    android:singleLine="true"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@id/recipe_card_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/card_font_color"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/card_lower_background"
                android:textSize="15sp" />

            <TextView
                android:id="@id/recipe_card_rating"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/card_font_color"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/card_lower_background"
                android:textSize="15sp" />

            <FrameLayout
                android:id="@id/recipe_card_difficulty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
